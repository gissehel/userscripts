    `;

        document.body.appendChild(modal);

        // ã‚¤ãƒ™ãƒ³ãƒˆãƒªã‚¹ãƒŠãƒ¼ï¼ˆæ—¢å­˜ã®ã‚°ãƒªãƒƒãƒ‰ã‚¯ãƒªãƒƒã‚¯ï¼‰
        modal.querySelector('#favorites-grid').addEventListener('click', (e) => {
            const card = e.target.closest('.favorite-card');
