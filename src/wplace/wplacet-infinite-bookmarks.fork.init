   // ã‚¨ã‚¯ã‚¹ãƒãƒ¼ãƒˆæ©Ÿèƒ½
    async exportFavorites() {
        try {
            const favorites = await this.getFavorites();

            if (favorites.length === 0) {
                this.showToast('ã‚¨ã‚¯ã‚¹ãƒãƒ¼ãƒˆã™ã‚‹ãŠæ°—ã«å…¥ã‚ŠãŒã‚ã‚Šã¾ã›ã‚“');
                return;
            }

            const exportData = {
                version: "1.0",
                exportDate: new Date().toISOString(),
                count: favorites.length,
                favorites: favorites
            };

            const dataStr = JSON.stringify(exportData, null, 2);
            const dataBlob = new Blob([dataStr], { type: 'application/json' });

            const link = document.createElement('a');
            link.href = URL.createObjectURL(dataBlob);
            link.download = `wplace-favorites-${new Date().toISOString().split('T')[0]}.json`;
            link.click();

            this.showToast(`${favorites.length}ä»¶ã®ãŠæ°—ã«å…¥ã‚Šã‚’ã‚¨ã‚¯ã‚¹ãƒãƒ¼ãƒˆã—ã¾ã—ãŸ`);

        } catch (error) {
            console.error('ã‚¨ã‚¯ã‚¹ãƒãƒ¼ãƒˆã‚¨ãƒ©ãƒ¼:', error);
            this.showToast('ã‚¨ã‚¯ã‚¹ãƒãƒ¼ãƒˆã«å¤±æ•—ã—ã¾ã—ãŸ');
        }
    }

    // ã‚¤ãƒ³ãƒãƒ¼ãƒˆæ©Ÿèƒ½
    importFavorites() {
        const fileInput = document.getElementById('import-file');
        fileInput.click();

        fileInput.onchange = async (e) => {
            const file = e.target.files[0];
            if (!file) return;

            try {
                const text = await file.text();
                const importData = JSON.parse(text);

                // ãƒ‡ãƒ¼ã‚¿å½¢å¼ãƒã‚§ãƒƒã‚¯
                if (!importData.favorites || !Array.isArray(importData.favorites)) {
                    throw new Error('ç„¡åŠ¹ãªãƒ•ã‚¡ã‚¤ãƒ«å½¢å¼ã§ã™');
                }

                const currentFavorites = await this.getFavorites();
                const importCount = importData.favorites.length;

                if (!confirm(`${importCount}ä»¶ã®ãŠæ°—ã«å…¥ã‚Šã‚’ã‚¤ãƒ³ãƒãƒ¼ãƒˆã—ã¾ã™ã‹ï¼Ÿ\næ—¢å­˜ã®ãƒ‡ãƒ¼ã‚¿ã¯ä¿æŒã•ã‚Œã¾ã™ã€‚`)) {
                    return;
                }

                // é‡è¤‡ãƒã‚§ãƒƒã‚¯ï¼ˆåº§æ¨™ãŒåŒã˜ã‚‚ã®ã¯é™¤å¤–ï¼‰
                const newFavorites = importData.favorites.filter(importFav => {
                    return !currentFavorites.some(existing =>
                                                  Math.abs(existing.lat - importFav.lat) < 0.001 &&
                                                  Math.abs(existing.lng - importFav.lng) < 0.001
                                                 );
                });

                // IDã‚’æ–°è¦æ¡ç•ªï¼ˆæ•´æ•°ã§ï¼‰
                newFavorites.forEach((fav, index) => {
                    fav.id = Date.now() + index;
                });

                // ãƒãƒ¼ã‚¸ã—ã¦ä¿å­˜
                const mergedFavorites = [...currentFavorites, ...newFavorites];
                await GM.setValue(this.STORAGE_KEY, JSON.stringify(mergedFavorites));

                this.renderFavorites();
                this.showToast(`${newFavorites.length}ä»¶ã®ãŠæ°—ã«å…¥ã‚Šã‚’ã‚¤ãƒ³ãƒãƒ¼ãƒˆã—ã¾ã—ãŸ`);

            } catch (error) {
                console.error('ã‚¤ãƒ³ãƒãƒ¼ãƒˆã‚¨ãƒ©ãƒ¼:', error);
                this.showToast('ã‚¤ãƒ³ãƒãƒ¼ãƒˆã«å¤±æ•—ã—ã¾ã—ãŸ: ' + error.message);
            }

            // ãƒ•ã‚¡ã‚¤ãƒ«å…¥åŠ›ã‚’ã‚¯ãƒªã‚¢
            fileInput.value = '';
        };
    }

    // ãƒ¢ãƒ¼ãƒ€ãƒ«ã‚’é–‹ã
    openModal() {
        this.renderFavorites();
        document.getElementById('favorite-modal').showModal();
    }

    // ç¾åœ¨ä½ç½®ã‚’å–å¾—
    getCurrentPosition() {
        try {
            const locationStr = localStorage.getItem('location');
            if (locationStr) {
                const location = JSON.parse(locationStr);
                return {
                    lat: location.lat,
                    lng: location.lng,
                    zoom: location.zoom
                };
            }
        } catch (error) {
            console.error('ä½ç½®å–å¾—ã‚¨ãƒ©ãƒ¼:', error);
        }
        return null;
    }

    // ãŠæ°—ã«å…¥ã‚Šã‚’è¿½åŠ 
    async addFavorite() {
        const position = this.getCurrentPosition();
        if (!position) {
            alert('ä½ç½®æƒ…å ±ã‚’å–å¾—ã§ãã¾ã›ã‚“ã§ã—ãŸã€‚ãƒãƒƒãƒ—ã‚’ã‚¯ãƒªãƒƒã‚¯ã—ã¦ã‹ã‚‰ä¿å­˜ã—ã¦ãã ã•ã„ã€‚');
            return;
        }

        const name = prompt('ãŠæ°—ã«å…¥ã‚Šåã‚’å…¥åŠ›ã—ã¦ãã ã•ã„:', `åœ°ç‚¹ (${position.lat.toFixed(3)}, ${position.lng.toFixed(3)})`);
        if (!name) return;

        const favorite = {
            id: Date.now(),
            name: name,
            lat: position.lat,
            lng: position.lng,
            zoom: position.zoom || 14,
            date: new Date().toLocaleDateString('ja-JP')
        };

        const favorites = await this.getFavorites();
        favorites.push(favorite);
        await GM.setValue(this.STORAGE_KEY, JSON.stringify(favorites));

        // é€šçŸ¥
        this.showToast(`"${name}" ã‚’ä¿å­˜ã—ã¾ã—ãŸ`);
    }

    // ãŠæ°—ã«å…¥ã‚Šä¸€è¦§ã‚’å–å¾—
    async getFavorites() {
        try {
            const stored = await GM.getValue(this.STORAGE_KEY, '[]');
            return JSON.parse(stored);
        } catch (error) {
            console.error('ãŠæ°—ã«å…¥ã‚Šå–å¾—ã‚¨ãƒ©ãƒ¼:', error);
            return [];
        }
